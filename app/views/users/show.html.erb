<%= render partial: 'layouts/template', locals: { user:@user,book:@book} %>

<div class="col-xs-9">

    <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book|%>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image,:fill, 40,40, format: "jpg" %></td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body%></td>
    </tr>
    <% end %>
  </table>
</div>


